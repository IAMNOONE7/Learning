<Window x:Class="cs_DependencyInjection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs_DependencyInjection"
        mc:Ignorable="d"
        xmlns:ViewModel="clr-namespace:cs_DependencyInjection.MVVM.ViewModel"
        xmlns:screens="clr-namespace:cs_DependencyInjection.MVVM.View"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- This part tells WPF:
             "Whenever the DataContext (CurrentViewModel) is of type HomeViewModel,
              automatically show HomeView." -->
        <DataTemplate DataType="{x:Type ViewModel:HomeViewModel}">
            <screens:HomeView/>
        </DataTemplate>

        <!-- Same for Settings -->
        <DataTemplate DataType="{x:Type ViewModel:SettingsViewModel}">
            <screens:SettingsView/>
        </DataTemplate>
    </Window.Resources>

    <StackPanel Orientation="Vertical">       
        <TextBlock Text="Name:" 
                   VerticalAlignment="Center"
                   Width="200"/>
        <TextBox Margin="8,0,0,8" 
                 Width="200"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
        
        <Button Content="Greet" 
                Width="100" 
                Command="{Binding GreetCommand}"/>
        
        <TextBlock Grid.Row="2" 
                   Grid.ColumnSpan="2"
                   Margin="0,12,0,0"
                   TextWrapping="Wrap" 
                   FontSize="16"
                   Width="200"
                   Text="{Binding Message}"/>

        <DockPanel>
            <!-- A top menu with navigation buttons -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
                <Button Content="Home" Width="100" Margin="0,0,8,0" Command="{Binding GoHome}"/>
                <Button Content="Settings" Width="100" Command="{Binding GoSettings}"/>
            </StackPanel>

            <!-- This control will show the *current screen* -->
            <!-- The Content is bound to Nav.CurrentViewModel -->
            <ContentControl Content="{Binding Nav.CurrentViewModel}" Margin="10"/>
        </DockPanel>
    </StackPanel>

    
</Window>
