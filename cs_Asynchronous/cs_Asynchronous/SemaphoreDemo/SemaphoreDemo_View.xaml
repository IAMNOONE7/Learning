<Window x:Class="cs_Asynchronous.SemaphoreDemo.SemaphoreDemo_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs_Asynchronous.SemaphoreDemo"
        mc:Ignorable="d"
        Title="SemaphoreDemo_View" Height="450" Width="800">
    <Window.DataContext>
        <local:SemaphoreDemo_ViewModel/>
    </Window.DataContext>

    <StackPanel Margin="16" >
        <!-- Start button -->
        <Button Content="Start 10 async jobs (3 at a time)"
                Command="{Binding StartCommand}"
                Height="32"/>

        <!-- List of log messages -->
        <ListBox ItemsSource="{Binding Log}"
                 FontFamily="Consolas"
                 Height="320"/>
    </StackPanel>
</Window>
