<Window x:Class="cs_Asynchronous.LockDemo.LockDemo_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs_Asynchronous.LockDemo"
        mc:Ignorable="d"
        Title="LockDemo_View" Height="450" Width="800">
    <Window.DataContext>
        <local:LockDemo_ViewModel/>
    </Window.DataContext>

    <StackPanel Margin="16" >
        <TextBlock Text="Lock Demo — Thread-safe vs. non-thread-safe increment"
                   FontWeight="Bold" FontSize="14"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" >
            <Button Content="Run without lock" Command="{Binding RunWithoutLockCommand}" Width="150"/>
            <Button Content="Run with lock" Command="{Binding RunWithLockCommand}" Width="150"/>
        </StackPanel>

        <!-- Display results -->
        <TextBlock Text="{Binding Result}" FontFamily="Consolas" FontSize="13" Margin="0,10,0,0"/>
        <ListBox ItemsSource="{Binding Log}" FontFamily="Consolas" Height="240"/>
    </StackPanel>
</Window>
